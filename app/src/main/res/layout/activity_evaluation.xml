<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allergy Evaluation"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="24dp" />

        <!-- Scan Button -->
        <Button
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan a Product"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Scanned Barcode Status -->
        <TextView
            android:id="@+id/textScanResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorOnSurface"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Product Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProductInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ Product"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textIngredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§¾ Ingredients"
                    android:textColor="@color/colorOnSurface"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textAllergens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš¨ Allergens"
                    android:textColor="#D32F2F"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Product Image Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProductImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- Manual Entry Button -->
        <Button
            android:id="@+id/btnManualEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Manually"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@color/colorOnSecondary"
            android:layout_marginBottom="16dp" />

        <!-- Manual Entry Fields -->
        <LinearLayout
            android:id="@+id/manualEntryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="8dp">

            <EditText
                android:id="@+id/editProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Name"
                android:backgroundTint="@color/colorPrimary"
                android:padding="12dp"
                android:textColor="@color/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Barcode"
                android:backgroundTint="@color/colorPrimary"
                android:padding="12dp"
                android:textColor="@color/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editProductText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Description"
                android:backgroundTint="@color/colorPrimary"
                android:padding="12dp"
                android:textColor="@color/colorOnSurface"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Evaluate Button -->
        <Button
            android:id="@+id/btnEvaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evaluate Product"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary"
            android:layout_marginBottom="24dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Evaluation Result Text -->
        <TextView
            android:id="@+id/textEvaluationResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOnSurface"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Delete Scan -->
        <Button
            android:id="@+id/btnDeleteScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Scan"
            android:textStyle="bold"
            android:backgroundTint="#FF4444"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
