<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- User Icon -->
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile_circle_bg"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_background"
            android:padding="16dp"
            android:contentDescription="@string/user_avatar"
            android:elevation="4dp" />

        <!-- Profile Card -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="24dp"
            android:background="@drawable/profile_card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp">

            <!-- Name -->
            <TextView
                android:text="@string/nom"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textName"
                android:text="..."
                android:textSize="17sp"
                android:textColor="@color/colorOnSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <!-- Username -->
            <TextView
                android:text="Username"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textUsername"
                android:text="..."
                android:textSize="17sp"
                android:textColor="@color/colorOnSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <!-- Allergies -->
            <TextView
                android:text="Allergies"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editAllergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/allergies_s_par_es_par_une_virgule"
                android:textSize="16sp"
                android:background="#FFF8"
                android:padding="10dp"
                android:enabled="false"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="12dp"/>

            <!-- Edit / Save Buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnEditAllergies"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_allergies"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnSaveAllergies"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:enabled="false"
                    android:backgroundTint="@color/colorSecondary"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:backgroundTint="#EB5757"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>


</ScrollView>
